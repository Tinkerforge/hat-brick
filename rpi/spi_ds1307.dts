/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2836", "brcm,bcm2708", "brcm,bcm2709";

	fragment@0
	{
		target = <&spi0>;
		__overlay__
		{
			status = "okay";
			pinctrl-0 = <&spi0_pins>;
			cs-gpios = <&gpio 8 1>;
  
			spidev@0
			{
				status = "okay";
				compatible = "spidev";
				spi-max-frequency = <1400000>;
			};

			spidev@1
			{
				status = "disabled";
			};
		};
	};

	fragment@1
	{
		target = <&i2c1>;
		__overlay__
		{
			#address-cells = <1>; /* needed to avoid dtc warning */
			#size-cells = <0>; /* needed to avoid dtc warning */
			pinctrl-names = "default";
			pinctrl-0 = <&i2c1_pins>;
			clock-frequency = <100000>;
			status = "okay";

			ds1307@68 {
				compatible = "dallas,ds1307";
				reg = <0x68>;
				status = "okay";
			};
		};
	};

	fragment@2 {
		target = <&gpio>;
		frag1: __overlay__ {
			spi0_cs_pins: spi0_cs_pins {
				brcm,pins = <8>;
				brcm,function = <1>;
			};
		};
	};
};
